{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y", 
        "import"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
              "extensions": [".js", ".jsx"]
            }
          ],
          "global-require": "off",
          "import/prefer-default-export": "off",
          "no-unused-expressions": ["error", { "allowTaggedTemplates": true }]
    }
}
